{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}
